while flag_stop_program != True:
    n = int(input())
    if n != 0:
        if minimum_n_1 > n:
            minimum_n = n
            minimum_n, minimum_n_1 = minimum_n_1, minimum_n
        elif minimum_n > n:
            minimum_n = n
    elif n == 0:
        flag_stop_program = True
print(minimum_n)

